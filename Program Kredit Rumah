    <script>
        function jualbeli(){
        var angsuran_rumah = document.getElementById("angsuran").value;
        var tipe_rumah = document.getElementById("tiperumah").text;
        var kredit=document.getElementById("kredit").value;
        var sisa = document.getElementById("sisa").value;
        var kredit = document.getElementById("kredit").value;
        var uangmuka = 0.20;
        var harga_rumah = document.getElementById("tiperumah").value;
        document.getElementById("hargarumah").value=harga_rumah;
        var total = harga_rumah*uangmuka;
        var sisa1 =  harga_rumah-total;
        var akredit = parseInt (sisa / kredit);
        document.getElementById("angsuran").value=akredit;
        document.getElementById("sisa").value=sisa1;
        document.getElementById("tiperumah").text=tipe_rumah;
        document.getElementById("uangmuka").value=total;
        }
    </script>
